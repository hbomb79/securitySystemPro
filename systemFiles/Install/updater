local args = { ... }

errMess = 'ERROR'

-- This is the program/script that actually re-installs all of the scripts on the computer
termX, termY = term.getSize()

function PrintCentered(text, y)
	local w, h = term.getSize()
    x = math.ceil(math.ceil((w / 2) - (#text / 2)), 0)+1
    term.setCursorPos(x, y)
	term.clearLine()
    write(text)
end


function errorEnd()
  sleep(3)
  printer.centered('The Updater Has Experienced A Problem', 6)
  printer.centered('Please Wait While We Try Again', 8)
  printer.centered('Check Your Internet Connection!', 11)
  printer.centered('Report If This Isnt Getting Resolved', 12)
   for i = 5, 0, -1 do
	 if i == 0 then
       if args[1] == 'quiet' then
	     shell.run('systemFiles/Install/updater', 'quiet')
	   else
	     shell.run('systemFiles/Install/updater')
	   end
	 end
	 printer.centered('Retrying In: '..i, 19)
	 sleep(1)
   end
end


function drawTitleBar()
  term.setBackgroundColor(128)
  term.setCursorPos(1,1)
  term.clearLine()
  term.setTextColor(colors.cyan)
  write "HbombOS Security Solutions"
  term.setCursorPos(1,2)
  term.clearLine()
  term.setTextColor(256)
  write "Updater"
  term.setTextColor(1)
  term.setBackgroundColor(256)
end

function welcome()
term.setBackgroundColor(256)
term.clear()
drawTitleBar()
PrintCentered("Welcome to the HbombOS Updater", 4)
PrintCentered("This Updater Will Guide", 6)
PrintCentered("You Through Updating Your Security Suite", 7)
PrintCentered("Press Y Continue Or N To Cancel", 9)
local event, key = os.pullEvent("key")
if key == keys.y then
term.clear()
drawTitleBar()
PrintCentered("Updating...", 4)
sleep(1)
PrintCentered("Connection Established", 6)
sleep(0.1)
PrintCentered("Starting Download", 6)
downloader()
PrintCentered("Finished Downloading Scripts", 6)
sleep(1)
term.clear()
drawTitleBar()
PrintCentered ("Thank You For Updating", 6)
PrintCentered ("We Hope You Enjoy Your New Security Suite", 8)
PrintCentered ("Please Report Any Bugs You Find On The Forums", 10)
PrintCentered ("Verifying Update With GitHub..", 19)
sleep(2)
PrintCentered ("Press Any Key To Finish", 19)
os.pullEvent("key")
term.setBackgroundColor(colors.black)
term.clear()
term.setCursorPos(1,1)
term.clearLine()
os.reboot()

else
  term.clear()
  drawTitleBar()
  PrintCentered("Cancelling...", 6)
  sleep(1)
  PrintCentered ("Cancelled, Come Back Soon", 6)
  sleep(2)
  os.shutdown()
end
end

function downloader(quietDownload)
drawTitleBar()
PrintCentered("Downloading Scripts From GitHub... Please Wait", 6)
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/startup", "startup", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/version", "version", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Install/installerdada", "systemFiles/Install/installer", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Install/updater", "systemFiles/Install/updater", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot0.nfp", "systemFiles/BootLogos/boot0.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot1.nfp", "systemFiles/BootLogos/boot1.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot2.nfp", "systemFiles/BootLogos/boot2.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot3.nfp", "systemFiles/BootLogos/boot3.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot4.nfp", "systemFiles/BootLogos/boot4.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot5.nfp", "systemFiles/BootLogos/boot5.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot6.nfp", "systemFiles/BootLogos/boot6.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot7.nfp", "systemFiles/BootLogos/boot7.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/BootLogos/boot8.nfp", "systemFiles/BootLogos/boot8.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/bootFail.nfp", "systemFiles/bootFail.nfp", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/download", "api/download", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/systemCheck", "api/systemCheck", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/update", "api/update", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/printer", "/api/printer", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/titleBar", "/api/titleBar", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/api/errora", "/api/errora", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/README", "/Documentation/README", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/LICENSE", "/Documentation/LICENSE", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/dualKey", "/systemFiles/Programs/dualKey", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/keycard", "/systemFiles/Programs/keycard", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/keycardDual", "/systemFiles/Programs/keycardDual", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/pin", "/systemFiles/Programs/pin", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/reactor", "/systemFiles/Programs/reactor", true, 19) == 'ERROR' then errorEnd() end
if download.git("https://raw.githubusercontent.com/hbomb79/securitySystemPro/master/systemFiles/Programs/rangeLock", "/systemFiles/Programs/rangeLock", true, 19) == 'ERROR' then errorEnd() end
if quietDownload then os.reboot() else return true end
end

if args[1] == "quiet" then 
  term.setBackgroundColor(256)
  term.clear()
  drawTitleBar() 
  if downloader(true) == "ERROR" then printer.centered('An Error Occured, Please Wait While We Re-Try', 19) sleep(2) shell.run('systemFiles/Install/updater', "quiet") end
else 
  welcome() 
end